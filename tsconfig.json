{
  "compilerOptions": {
    "sourceMap": true,
    "target": "esNext",
    "jsx": "react",
    "module": "esNext",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "declaration": false,
    "removeComments": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "strict": true,
    "noImplicitAny": true,
    "outDir": "build",
    "lib": ["es6", "es7", "dom"],
    "baseUrl": "app",
    "allowSyntheticDefaultImports": true,
    "noImplicitThis": false,
    "paths": {
      "app/*": ["./src/*"],
      "@features/*": ["./src/features/*"],
      "@styles/*": ["./src/styles/*"],
      "@assets/*": ["./assets/*"],
      "@api/*" : ["./src/api/*"]
    }
  },
  "exclude": ["build", "node_modules"]
}
